<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <style>
        h1 {
            font-size: 24px;
        }

        h2 {
            font-size: 18px;
            font-weight: bold;
        }
        code {
            color: #000;
            background-color: #eee;
        }
    </style>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
